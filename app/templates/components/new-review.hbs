{{#if addNewReview}}
  <form class="ui form">
    <div class="field">
      <label for="author">Name:</label>
      {{input type="text" value=author}}
    </div>
    <div class="field">
      <label for="rating">Rating:</label>
      {{ui-rating
    initialRating=rating
    rating=rating
    maxRating=5
    onRate=(action (mut rating))}} - Rating {{rating}}
    </div>
    <div class="field">
      <label for="comment">Comment:</label>
      {{input type="text" value=comment}}
    </div>
    <button class="ui primary button" {{action 'addReview'}}>Finish</button>
  </form>
{{else}}
  <button class="ui primary button" {{action 'showReviewForm'}}>Review This Item</button>
{{/if}}
